#!/usr/bin/python

from ldap3 import Server, Connection, ALL, NTLM

server = Server('{{ realm }}')
conn = Connection(server, user="{{ realm_admin_ansible }}", password="{{ realm_password }}", authentication=NTLM)
groupDN = 'CN={{ ansible_hostname }},{{ group_ou }},sAMAccountName={{ ansible_hostname }},description="System Group for access"'

conn.bind()
conn.add(groupDN, 'group')
conn.unbind()
